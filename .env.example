# --- REGIONAL CONFIGURATION ---
# Defines the current region (e.g., 'us' or 'eu')
REGION=us

# --- DATABASE CONFIGURATION ---
# Connection string for the regional PostgreSQL instance
DATABASE_URL=postgres://user:password@db_us:5432/property_db_us

# --- KAFKA CONFIGURATION ---
# The address of the Kafka broker for event streaming
KAFKA_BROKER=kafka:9092

# --- SERVER CONFIGURATION ---
# The internal port the Node.js application listens on
PORT=3000
